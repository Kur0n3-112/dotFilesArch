/* Main Config (long) */

@import "~/.config/rofi/config-KurTheme"
@import "~/.config/rofi/dracula"

*{
  background-colour: @background;
  bordercolor: @drac-red;
}

/* ---- Window ---- */
window {
  width: 50%;
}

/* ---- Entry ---- */
entry {
  placeholder: "ðŸ”Ž Search       ";
}

/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 8;
  scrollbar: true;
}

/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       1000px;
    x-offset:                    0px;
    y-offset:                    0px;

    /* properties for all widgets */
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      2px solid;
    border-radius:               0px;
    border-color:                @bordercolor;
    cursor:                      "default";
    background-color:            @background-colour;
}
